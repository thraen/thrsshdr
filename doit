#!/bin/bash

if [ -n "$1" ]; then
    echo make link
    echo ln -s $1 link.frag
    ln -fs $1 link.frag
fi

echo kill old process
pkill -f a.out &> /dev/null

set -e

# just always do make clean 
echo clean 
make clean

echo compile
make -j4

echo run

## turn off vsync
export vblank_mode=0

## record 
