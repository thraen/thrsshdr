rule cc
    depfile = $out.d
    deps = gcc
    command = clang -MMD -MF $out.d $c_flags -c -o $out $in

rule link_synthr
    command = clang -o $out $c_flags $in $ld_flags_synthr

### thrgenerated
c_flags   =  -O3   -Wall -Wno-unused-variable -Wno-unused-function -Wno-sign-compare -fdiagnostics-color  
ld_flags_synthr   = -lm -lGL -lglfw -lportaudio 

build main.o: cc main.c

build synthr: link_synthr main.o
